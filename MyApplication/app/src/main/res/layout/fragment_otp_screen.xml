<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OtpScreenFragment">

    <ImageView
        android:id="@+id/baller_icon"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:src="@drawable/baller_icon"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        />
    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Ball"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/baller_icon"
        app:layout_constraintStart_toStartOf="@+id/baller_icon"
        android:layout_marginTop="40dp"
        android:layout_marginStart="140dp"
        android:textSize="40sp"
        />
<LinearLayout
    android:id="@+id/boxlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6"
    app:layout_constraintTop_toBottomOf="@+id/login_text"
    android:layout_marginTop="40dp"
    android:layout_marginStart="20dp"
    app:layout_constraintStart_toStartOf="parent"
    >

    <EditText
        android:id="@+id/box1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:inputType="number"
        android:maxLength="1"

        />
    <EditText
        android:id="@+id/box2"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:inputType="number"
        android:maxLength="1"
        />
    <EditText
        android:id="@+id/box3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="number"
        android:maxLength="1"
        />
    <EditText
        android:id="@+id/box4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="number"
        android:maxLength="1"
        />
    <EditText
        android:id="@+id/box5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="number"
        android:maxLength="1"
        />
    <EditText
        android:id="@+id/box6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="number"
        android:maxLength="1"
        />
</LinearLayout>

    <TextView
        android:id="@+id/dontgetcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/boxlayout"
        app:layout_constraintStart_toStartOf="@+id/boxlayout"
        android:layout_marginTop="40dp"

        android:text="Did'nt get the code?"
        />
    <TextView
        android:id="@+id/resendit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boxlayout"
        android:layout_marginTop="40dp"
        android:text="Resend it"
        android:textStyle="bold"
        android:textColor="@color/black"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/dontgetcode"
        app:layout_constraintStart_toStartOf="@+id/dontgetcode"
        app:layout_constraintEnd_toEndOf="@+id/resendit"
        android:layout_marginTop="30dp"
     app:cardBackgroundColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/white"
            android:layout_gravity="center"

            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>