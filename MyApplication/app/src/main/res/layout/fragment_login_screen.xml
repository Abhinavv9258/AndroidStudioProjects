<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginScreenFragment">

    <ImageView
        android:id="@+id/baller_icon"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:src="@drawable/baller_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        />
    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Ball"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/baller_icon"
        app:layout_constraintStart_toStartOf="@+id/baller_icon"
        android:layout_marginTop="40dp"
        android:layout_marginStart="140dp"
        android:textSize="40sp"
        />
    <TextView
        android:id="@+id/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        app:layout_constraintTop_toBottomOf="@+id/login_text"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"

        />
    <EditText
        android:id="@+id/phone_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/phone_text"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:hint="Phone Number"
        android:inputType="number
"
        android:textColorHint="@color/black"

        />
<androidx.cardview.widget.CardView
    android:id="@+id/next"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@+id/phone_edittext"
    app:layout_constraintStart_toStartOf="@+id/phone_edittext"
    app:layout_constraintEnd_toEndOf="@+id/phone_edittext"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:elevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="20dp"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Next"
            android:background="@color/black"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="center"
                  />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_gravity="end"
        android:layout_marginTop="2dp"
        />


</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>